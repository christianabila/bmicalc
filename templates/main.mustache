<!doctype html>
<html lang="de" ng-app>
   {{> head}}
    <body>
        <div class="container">
            <div class="row">
                <div class="col">
                    <header style="background-color:lightgrey;padding:10px">
                        <h1>BMI Rechner</h1>
                        <span style="text-size:8px">v{{version}}</span>
                    </header>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link {{#selectedTab}}active{{/selectedTab}}" href="#metric" onclick="changeSelection({{selectedTab}})">Metrisch</a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link {{^selectedTab}}active{{/selectedTab}}" href="#imperial" onclick="changeSelection({{selectedTab}})">Empirisch</a>
                        </li>
                    </ul>
                    
                    <div class="tab-content">
                        <div id="metric" class="tab-pane container {{#selectedTab}}active{{/selectedTab}}">
                            <form action="{{action}}" method="post">
                                <div class="form-group">
                                    <label for="weight">Gewicht (kg):</label>
                                    <input type="number" name="weight" min="0.0" step="0.1" class="form-control" value="{{weight}}">   
                                </div>
                                <div class="form-group">
                                    <label for="height">Gr&ouml;&szlig;e (cm):</label>
                                    <input type="number" name="height" min="0" step="1" class="form-control" value="{{height}}">   
                                </div>
                                <button type="submit" class="btn btn-success">Berechnen</button>
                            </form>
                        </div>
                        
                        <div id="imperial" class="tab-pane container {{^selectedTab}}active{{/selectedTab}}">
                            <form action="{{action}}" method="post">
                                <div class="form-group">
                                    <label for="weightImperial">Gewicht (lbs):</label>
                                    <input type="number" name="weightImperial" min="0.0" step="0.1" class="form-control" value="{{weightImperial}}">   
                                </div>
                                
                                <div class="form-group">
                                    <label for="heightFt">Ft:</label>
                                    <input type="number" name="heightFt" min="0" step="1" class="form-control" value="{{heightFt}}">  
                                    
                                    <label for="heightInch">Inch:</label>
                                    <input type="number" name="heightInch" min="0" step="1" class="form-control" value="{{heightInch}}">   
                                </div>
                                <button type="submit" class="btn btn-success">Berechnen</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{> bmioutput}}
        </div>
    </body>
</html>
