<div class="row">
    <div class="col">
        {{#bmi}}
            Gewicht: {{#weight}}{{weight}} kg{{/weight}} {{#weightImperial}}{{weightImperial}} lbs{{/weightImperial}}<br>
            Größe: {{#height}}{{height}} cm{{/height}} {{^height}}{{heightFt}}' {{heightInch}}"{{/height}}<br>
        {{/bmi}}
        <h2>
        {{#bmi}}
            Ihr BMI: {{bmi}} {{dimension}}
        {{/bmi}}
        </h2>
    </div>
    <div class="col">
        {{#bmi}}
        <table class='table'>
            <thead>
                <th>BMI</th>
                <th>Kategorie</th>
            </thead>
            <tbody>
                <tr style='background-color:{{underweight}}'><td>unter 18,5</td><td>Untergewicht</td></tr>
                <tr style='background-color:{{normal}}'><td>18,5 - 24,9</td><td>Normalgewicht</td></tr>
                <tr style='background-color:{{overweight}}'><td>25,0 - 29,9</td><td>&Uuml;bergewicht</td></tr>
                <tr style='background-color:{{obese1}}'><td>30,0 - 34,9</td><td>Fettleibigkeit 1</td></tr>
                <tr style='background-color:{{obese2}}'><td>35,0 - 39,9</td><td>Fettleibigkeit 2</td></tr>
                <tr style='background-color:{{obese3}}'><td>&uuml;ber 40</td><td>Fettleibigkeit 3</td></tr>
            </tbody>
        </table>
        
        <a href='http://www.euro.who.int/en/health-topics/disease-prevention/nutrition/a-healthy-lifestyle/body-mass-index-bmi' style='font-size:10px'>Quelle</a>
        {{/bmi}}
    </div>
</div>